<!doctype html>
<% if false then %>
    <!-- vim:set tw=1000: -->
<% end %>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
        <meta name="author" content="Wojciech Adam Koszek">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="p:domain_verify" content="35dedfd4f697e6e974b0ae6631ca7351"/>

        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
            <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->

        <link rel="stylesheet" media="none" onload="if(media!='all')media='all'" href="/css/1406-fonts.css">
        <link rel="stylesheet" media="none" onload="if(media!='all')media='all'" href="/css/debug.css">
        <link rel="stylesheet" media="none" onload="if(media!='all')media='all'" href="/css/code.css">
	<link rel="stylesheet" media="none" href="https://cdn.jsdelivr.net/min/1.5/min.min.css" />

        <link rel="icon" type="image/png" href="/img/favicon.ico">

        <title><%= self.data.title  %> - Wojciech Adam Koszek</title>
        <meta name="description" content="<%= self.data.description %>" />

        <meta property="og:title" content="<%= self.data.title %>" />
        <meta property="og:description" content="<%= self.data.description %>" />

	<% if self.data.image %>
		<meta property="og:image" content="<%= self.data.image %>" />
	<% end %>


        <meta property="og:type" content="article" />
        <meta property="article:author" content="https://www.koszek.com/about" />
        <meta property="article:publisher" content="https://www.koszek.com/" />


    </head>
    <style type="text/css">
      body { width: 50%; margin-left: 10%;
        font-family: baskerville;
	font-size: 16pt;
	line-height: 150%;
	color: #333;
      }
      h1,h2,h3 { 
        font-family: "equity-text-b";
      font-weight: bold; }
    </style>
    <body>

  <%= render(File.join(self.blog.cfg.theme_path, 'header.erb')) %>

  <%= self.data.article_body %>

  <b>tags</b>
  <%= self.data.tags %>

  <% tags = []
     self.blog.articles.each do |a| 
       tags += (a.data.tags || [])
     end
     tags = tags.uniq
     %>
   <% tags.each do |tag| %>
     <a href=""><%= tag %>
   <% end %>

  </body>
</html>
